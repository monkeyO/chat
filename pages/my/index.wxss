/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #aaa;
}
.body{  
    font-family: -apple-system-font,Helvetica Neue,Helvetica,          sans-serif;
    flex: 1;
    font-size: 32rpx;    
    overflow: hidden;
    margin-top: 30rpx;
}
.widgets__item{
    background-color: #FFFFFF;
    overflow: hidden;
    border-radius: 4rpx;
    cursor: pointer;
    border-top: 1px solid #eee;
}
.body .widgets__item:last-child{
    border-bottom: 1px solid #eee;
}
.widgets__info{
    display: flex;
     padding: 30rpx 40rpx;
    align-items: center;
    flex-direction: row;
}

.widgets__info-name{
    flex: 1;
}
.widgets__info-img{
    width: 32rpx;
    height: 32rpx;
}